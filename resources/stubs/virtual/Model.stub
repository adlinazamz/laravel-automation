<?php

namespace App\Models;

use Illuminate\Database\Eloquent\Model;

class VirtualModel extends Model
{
    protected $table;
    protected $fillable = [];

    public function __construct($table, array $attributes = [])
    {
        parent::__construct($attributes);
        $this->table = $table;
        $this->fillable = \Illuminate\Support\Facades\Schema::getColumnListing($table);
    }
}
